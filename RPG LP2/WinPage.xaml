        <Image x:Name="img_dy" Height="80" Width="113" Canvas.Left="353" Canvas.Top="367" />
        <Image x:Name="chupeta" Source="Assets/Chupeta.png" Canvas.ZIndex="50" Height="369" Width="366" Canvas.Left="563" Canvas.Top="36" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform Rotation="-15.468"/>
